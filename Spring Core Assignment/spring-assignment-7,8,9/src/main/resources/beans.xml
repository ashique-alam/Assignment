<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans.xsd" default-init-method="myInit" default-destroy-method="cleanUp">
    
    <bean id="parenttriangle" class="com.ashique.Triangle" abstract="true">
    	<property name="points">
    		<list>
    			<ref bean="point1" />
    		</list>
    	</property>
    	
    </bean> 
    
    <bean id="triangle1" class="com.ashique.Triangle" parent="parenttriangle" >
    	<property name="points">
    		<list merge="true">
    			<ref bean="point2" />
    		</list>
    	</property>
    	
    </bean> 
    
    <bean id="point1" class="com.ashique.Point">
    	<property name="x" value="0" />
    	<property name="y" value="0" />
    </bean>
    
    <bean id="point2" class="com.ashique.Point">
    	<property name="x" value="0" />
    	<property name="y" value="-20" />
    </bean>
    
    <bean id="point3" class="com.ashique.Point">
    	<property name="x" value="20" />
    	<property name="y" value="0" />
    </bean>
    
    <bean class="com.ashique.DisplayNameBeanPostProcessor" />
    
</beans>   